{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ]
}